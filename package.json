{
  "name": "froglog-medical-backend",
  "version": "1.0.0",
  "description": "Backend API for FrogLog Medical - AI-powered medical logbook",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step required for Node.js backend'",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "lint": "echo 'No linting configured'",
    "seed": "node utils/seedDatabase.js",
    "db:reset": "node utils/resetDatabase.js",
    "logs": "pm2 logs --nostream",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "clean-port": "fuser -k 5000/tcp 2>/dev/null || true"
  },
  "keywords": [
    "medical",
    "logbook",
    "healthcare",
    "ai",
    "transcription",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "FrogLog Medical Team",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/speech": "^7.2.0",
    "@google-cloud/vertexai": "^1.10.0",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.0",
    "firebase-admin": "^12.6.0",
    "google-auth-library": "^10.4.0",
    "googleapis": "^161.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^8.6.3",
    "mongoose-paginate-v2": "^1.9.1",
    "multer": "^1.4.4",
    "multer-gridfs-storage": "^5.0.2",
    "nodemailer": "^6.9.15",
    "openai": "^4.67.3",
    "pdfkit": "^0.15.2",
    "stripe": "^16.12.0",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!tests/**",
      "!jest.config.js"
    ]
  }
}
