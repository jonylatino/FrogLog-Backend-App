# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
PRODUCTION_URL=https://froglogbook.com

# Database Configuration
# Get this from MongoDB Atlas or your database provider
MONGODB_URI=mongodb://localhost:27017/froglog

# Authentication Secrets
# Generate a strong random string for JWT (e.g., openssl rand -base64 32)
JWT_SECRET=your_super_secure_jwt_secret_key_here

# Google OAuth Configuration
# From Google Cloud Console -> APIs & Services -> Credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# For local dev: http://localhost:3000
# For production: https://froglogbook.com
GOOGLE_REDIRECT_URI=http://localhost:3000

# Google Cloud & AI Services
GOOGLE_CLOUD_PROJECT_ID=your-project-id
# JSON string of your service account key (remove newlines if needed for some env providers)
GOOGLE_CLOUD_CREDENTIALS={"type": "service_account", ...}
# OR path to file
# GOOGLE_APPLICATION_CREDENTIALS=config/google-service-account.json
# API Key for Gemini/AI features
GOOGLE_API_KEY=your_google_ai_api_key

# Stripe Payments
# From Stripe Dashboard -> Developers -> API keys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_MONTHLY_PRICE_ID=price_...

# Firebase Configuration (Optional if using Google OAuth mainly)
FIREBASE_SERVICE_ACCOUNT={"type": "service_account", ...}
FIREBASE_STORAGE_BUCKET=your-app.appspot.com

# Redis (Optional - for job queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
